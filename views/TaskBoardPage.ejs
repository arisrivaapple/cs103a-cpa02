<link rel="stylesheet" href="css/style.css">
<html>
<body>
    <div class="jumbotron">
        <h1> Task Board </h1>
        <p> Here is your list of things to do! </p>
    </div>  

    <div class="d-flex flex-wrap">
    <% for (task of tasks) { %>
        <%   if (!task['task_status_completed']){ %>
            <div class="p-3 m-3 bg-info w-25 border border-primary border-5">  
                 <a class="btn btn-light" href="<%= task['task_url']%>" role="button"> <%= task['task_name']%></a>
                 <a class="btn btn-light" href="<%= task['task_submit_url']%>" role="button"> submit </a>
            </div>
        <% } %>
    <% } %>
</div>
<br>
<a class="btn btn-light" href="/newTask" role="button">Add New Task</a>
<br></br>
<br></br>
    <div class="jumbotron">
        <h3> Completed Tasks: </h3>
    </div>  
    
       <div class="d-flex flex-wrap">
        <% for (task of tasks) {  %>
            <% if (task['task_status_completed']){  %>
            <div class="p-3 m-3 bg-info w-25 border border-primary border-5">  
                <a class="btn btn-light" href="<%= task['task_url']%>" role="button"> <%= task['task_name']%> <%= task['task_completed_status']%></a>
                <%= task['task_completed_status']%>
            </div>
            <% } %>
        <% } %>
       </div>

    
</body>
</html>